<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :DOB %><br />
    <%= f.date_select :DOB %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    

	<%= f.label :Male %><%= radio_button_tag 'gender', 'Male'%>
        <%= f.label :Female %><%=radio_button_tag 'gender', 'Female'%>

  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="field">
	Hobbies<br>
<% variable= Array["Singing","Dancing","Reading", "Swimming"] %>

     <% variable.each do |var| %>
         <%= var %>
	 <input type="checkbox" id= <%= var %> name= hobbies[] value= <%= var %> />
      <% end %>

  </div>
  <div class="field">
<br>
    <%= f.label :interest %><br />
    <%= f.text_field :interest %>
  </div>

 <div class="field">
<br>    <%= f.label :email %><br />
    <%= f.text_field :email, :readonly => :readonly %>
  </div>

  <div class="field">
 <br>   <%= f.label :emp_id %><br />
    <%= f.text_field :emp_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
